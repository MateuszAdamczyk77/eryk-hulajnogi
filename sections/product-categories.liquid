{{ 'section-multicolumn.css' | asset_url | stylesheet_tag }}

<style>
  .product-categories {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
  }
  
  .category-card {
    position: relative;
    overflow: hidden;
    border-radius: 12px;
    background: rgb(var(--color-background));
    border: 1px solid rgba(var(--color-foreground), 0.08);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    min-height: 280px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 2rem 1.5rem;
    text-decoration: none;
    color: rgb(var(--color-foreground));
  }
  
  .category-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 12px 30px rgba(var(--color-shadow), 0.15);
    text-decoration: none;
  }
  
  .category-icon {
    width: 48px;
    height: 48px;
    margin-bottom: 1.25rem;
    fill: rgb(var(--color-base-accent-1));
    opacity: 1;
  }
  
  .category-title {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: rgb(var(--color-foreground));
  }
  
  .category-description {
    font-size: 0.875rem;
    color: rgba(var(--color-foreground), 0.8);
    line-height: 1.5;
    margin: 0;
  }
  
  @media screen and (min-width: 750px) {
    .category-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 2rem;
    }
  }
  
  @media screen and (max-width: 749px) {
    .category-grid {
      display: grid;
      gap: 1rem;
    }
    
    .category-card {
      min-height: 200px;
      padding: 1.5rem;
    }
  }
</style>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="product-categories page-width">
    {% if section.settings.title != blank %}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title {{ section.settings.heading_size }}">
          {{ section.settings.title | escape }}
        </h2>
      </div>
    {% endif %}

    <div class="category-grid">
      <a href="shopify://collections/batteries" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <path d="M15.67 4H14V2h-4v2H8.33C7.6 4 7 4.6 7 5.33v15.33C7 21.4 7.6 22 8.33 22h7.33c.74 0 1.34-.6 1.34-1.33V5.33C17 4.6 16.4 4 15.67 4z"/>
        </svg>
        <h3 class="category-title">Baterie</h3>
        <p class="category-description">Oryginalne baterie litowo-jonowe zwiększające zasięg Twojej hulajnogi</p>
      </a>
      
      <a href="shopify://collections/brakes" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10"/>
          <circle cx="12" cy="12" r="3"/>
        </svg>
        <h3 class="category-title">Hamulce</h3>
        <p class="category-description">Profesjonalne systemy hamulcowe dla maksymalnego bezpieczeństwa</p>
      </a>
      
      <a href="shopify://collections/tires" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <circle cx="12" cy="12" r="10" fill="none" stroke="currentColor" stroke-width="2"/>
          <circle cx="12" cy="12" r="3" fill="none" stroke="currentColor" stroke-width="2"/>
          <path d="m4.93 4.93 4.24 4.24" stroke="currentColor" stroke-width="2"/>
          <path d="m14.83 9.17 4.24-4.24" stroke="currentColor" stroke-width="2"/>
          <path d="m14.83 14.83 4.24 4.24" stroke="currentColor" stroke-width="2"/>
          <path d="m9.17 14.83-4.24 4.24" stroke="currentColor" stroke-width="2"/>
        </svg>
        <h3 class="category-title">Opony</h3>
        <p class="category-description">Wytrzymałe opony pneumatyczne i bezpowietrzne do każdego terenu</p>
      </a>
      
      <a href="shopify://collections/lights" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <path d="M12 2L3.09 8.26L12 22L20.91 8.26L12 2ZM12 6.5L16.96 10.5H7.04L12 6.5Z"/>
        </svg>
        <h3 class="category-title">Oświetlenie</h3>
        <p class="category-description">Światła LED, reflektory i akcesoria zwiększające widoczność</p>
      </a>
      
      <a href="shopify://collections/accessories" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <path d="M20 6H16L14 4H10L8 6H4C2.9 6 2 6.9 2 8V18C2 19.1 2.9 20 4 20H20C21.1 20 22 19.1 22 18V8C22 6.9 21.1 6 20 6ZM12 16C10.34 16 9 14.66 9 13S10.34 10 12 10 15 11.34 15 13 13.66 16 12 16Z"/>
        </svg>
        <h3 class="category-title">Akcesoria</h3>
        <p class="category-description">Stojaki, blokady, torby i inne praktyczne dodatki</p>
      </a>
      
      <a href="shopify://collections/electronics" class="category-card">
        <svg class="category-icon" viewBox="0 0 24 24">
          <rect x="2" y="3" width="20" height="14" rx="2" ry="2"/>
          <line x1="8" y1="21" x2="16" y2="21"/>
          <line x1="12" y1="17" x2="12" y2="21"/>
        </svg>
        <h3 class="category-title">Elektronika</h3>
        <p class="category-description">Kontrolery, wyświetlacze LCD i systemy sterowania</p>
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Categories",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Kategorie Produktów",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Medium"
        },
        {
          "value": "h1",
          "label": "Large"
        }
      ],
      "default": "h2",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2", 
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range", 
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Product Categories"
    }
  ]
}
{% endschema %}