{
  "sections": {
    "image_banner": {
      "type": "image-banner",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ 'kukrin.hero.title' | t }}",
            "heading_size": "h0"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "{{ 'kukrin.hero.subtitle' | t }}",
            "text_style": "body"
          }
        },
        "button": {
          "type": "buttons",
          "settings": {
            "button_label_1": "{{ 'kukrin.hero.shop_now' | t }}",
            "button_link_1": "shopify://collections/all",
            "button_style_secondary_1": false,
            "button_label_2": "{{ 'kukrin.hero.learn_more' | t }}",
            "button_link_2": "#about",
            "button_style_secondary_2": true
          }
        }
      },
      "block_order": [
        "heading",
        "text",
        "button"
      ],
      "settings": {
        "image_overlay_opacity": 50,
        "image_height": "large", 
        "desktop_content_position": "middle-center",
        "show_text_box": true,
        "desktop_content_alignment": "center",
        "color_scheme": "scheme-1",
        "mobile_content_alignment": "center",
        "stack_images_on_mobile": false,
        "show_text_below": false
      }
    },
    "rich_text": {
      "type": "rich-text",
      "blocks": {
        "heading": {
          "type": "heading",
          "settings": {
            "heading": "{{ 'kukrin.about.title' | t }}",
            "heading_size": "h1"
          }
        },
        "text": {
          "type": "text",
          "settings": {
            "text": "<p>{{ 'kukrin.about.description' | t }}<\/p>"
          }
        }
      },
      "block_order": [
        "heading",
        "text"
      ],
      "settings": {
        "color_scheme": "scheme-1",
        "full_width": true,
        "padding_top": 60,
        "padding_bottom": 40
      }
    },
    "featured_collection": {
      "type": "featured-collection",
      "settings": {
        "title": "Polecane Produkty",
        "heading_size": "h2",
        "collection": "all",
        "products_to_show": 8,
        "columns_desktop": 4,
        "color_scheme": "scheme-1",
        "show_view_all": true,
        "swipe_on_mobile": false,
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_vendor": false,
        "show_rating": false,
        "columns_mobile": "2",
        "padding_top": 40,
        "padding_bottom": 60
      }
    },
    "product_categories": {
      "type": "product-categories",
      "settings": {
        "title": "{{ 'kukrin.categories.title' | t }}",
        "heading_size": "h2",
        "color_scheme": "background-2",
        "padding_top": 60,
        "padding_bottom": 60
      }
    },
    "multicolumn": {
      "type": "multicolumn",
      "blocks": {
        "column1": {
          "type": "column",
          "settings": {
            "title": "{{ 'kukrin.features.quality.title' | t }}",
            "text": "<p>{{ 'kukrin.features.quality.description' | t }}<\/p>",
            "link_label": "",
            "link": ""
          }
        },
        "column2": {
          "type": "column",
          "settings": {
            "title": "{{ 'kukrin.features.shipping.title' | t }}",
            "text": "<p>{{ 'kukrin.features.shipping.description' | t }}<\/p>",
            "link_label": "",
            "link": ""
          }
        },
        "column3": {
          "type": "column",
          "settings": {
            "title": "{{ 'kukrin.features.warranty.title' | t }}",
            "text": "<p>{{ 'kukrin.features.warranty.description' | t }}<\/p>",
            "link_label": "",
            "link": ""
          }
        },
        "column4": {
          "type": "column",
          "settings": {
            "title": "{{ 'kukrin.features.support.title' | t }}",
            "text": "<p>{{ 'kukrin.features.support.description' | t }}<\/p>",
            "link_label": "",
            "link": ""
          }
        }
      },
      "block_order": [
        "column1",
        "column2",
        "column3",
        "column4"
      ],
      "settings": {
        "title": "Dlaczego WybierajÄ… Nas",
        "heading_size": "h2",
        "image_width": "full",
        "image_ratio": "adapt",
        "columns_desktop": 4,
        "column_alignment": "center",
        "background_style": "primary",
        "button_label": "",
        "button_link": "",
        "swipe_on_mobile": true,
        "color_scheme": "scheme-2",
        "columns_mobile": "1",
        "padding_top": 60,
        "padding_bottom": 60
      }
    }
  },
  "order": [
    "image_banner",
    "rich_text", 
    "product_categories",
    "featured_collection",
    "multicolumn"
  ]
}
